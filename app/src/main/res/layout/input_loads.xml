<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow android:layout_margin="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/beam_load"
            android:layout_height="wrap_content"
            android:text="载荷大小：" />
        <EditText
            android:id="@+id/load"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入载荷大小"
            android:inputType="numberSigned|numberDecimal" />
    </TableRow>
    <TableRow android:layout_margin="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/load_left_position"
            android:layout_height="wrap_content"
            android:text="作用位置：" />
        <EditText
            android:id="@+id/left_position"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入作用位置"
            android:inputType="numberDecimal"/>
    </TableRow>
    <TableRow
        android:id="@+id/hide_row"
        android:layout_margin="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/load_right_position"
            android:layout_height="wrap_content"
            android:text="作用位置：" />
        <EditText
            android:id="@+id/right_position"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入作用位置"
            android:inputType="numberDecimal"/>
    </TableRow>

</TableLayout>
